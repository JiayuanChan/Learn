<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.adrian.library.widget.superView.SuperTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftTextString="系统默认"
        stv:sRightViewType="switchBtn" />


    <com.adrian.library.widget.superView.SuperTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        stv:sLeftTextString="自己添加资源"
        stv:sRightViewType="switchBtn"
        stv:sSwitchIsChecked="true"
        stv:sSwitchMinWidth="50dp"
        stv:sThumbResource="@drawable/super_thumb"
        stv:sTrackResource="@drawable/super_track" />


</LinearLayout>