<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_head_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorTitleBg">

    <RelativeLayout
        android:id="@+id/child_head_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/head_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp10"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_back" />

        <ImageView
            android:id="@+id/head_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp10"
            android:scaleType="centerCrop"
            android:layout_marginLeft="40dp"
            android:visibility="gone"
            android:src="@mipmap/icon_fork" />


        <TextView
            android:id="@+id/head_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp200"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorTitleFont"
            android:textSize="@dimen/sp18" />

        <ImageView
            android:id="@+id/head_iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp10"
            android:visibility="gone"
            android:src="@mipmap/icon_setting" />

        <TextView
            android:id="@+id/head_tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            android:padding="@dimen/dp10"
            android:text="提交"
            android:textColor="@color/colorTitleFont"
            android:textSize="@dimen/sp16"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/head_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/shadow" />

</RelativeLayout>